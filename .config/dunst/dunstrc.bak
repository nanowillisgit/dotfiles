[colors]
	background = "#15191b"
	foreground = "#ccd4d4"
	one = "#9A8971"
	two = "#2E578E"
	three = "#376095"
	four = "#4C6F9A"
	five = "#817F84"
	six = "#708BA6"
	seven = "#ccd4d4"
	eight = "#8e9494"
	nine = "#9A8971"
	ten = "#2E578E"
	eleven = "#376095"
	twelve = "#4C6F9A"
	thirteen = "#817F84"
	fourteen = "#708BA6"
	fifteen = "#ccd4d4"
	active = "#676569"
	inactive = "#464548"

[global]
    ### Display ###

    monitor = 0
    follow = mouse

    geometry = "540x5-10+40"
    indicate_hidden = yes
    shrink = yes
    transparency = 0
    notification_height = 0
    separator_height = 3
    padding = 12
    horizontal_padding = 12
    frame_width = 3

    frame_color = colors.active
    separator_color = colors.active
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = Terminus 10
    line_height = 0

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = leftS
    max_icon_size = 64
    icon_path = ~/.config/:~/.config/icons/

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -show run -p dunst:
    browser = /usr/bin/firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    context = ctrl+shift+period

[urgency_low]
    background = colors.background
    foreground = colors.foreground
    frame_color = colors.inactive
    timeout = 10

[urgency_normal]
    background = colors.background
    foreground = colors.foreground
    frame_color = "#676569"
    timeout = 10

[urgency_critical]
    background = colors.background
    foreground = colors.foreground
    frame_color = "#ff0000"
    timeout = 0
