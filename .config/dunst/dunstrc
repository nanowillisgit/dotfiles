[global]
    ### Display ###

    monitor = 0
    follow = keyboard

    geometry = "540x90-10+40"
    indicate_hidden = yes
    shrink = yes
    transparency = 0
    notification_height = 0
    separator_height = 5
    padding = 20
    horizontal_padding = 20
    frame_width = 3

    frame_color = "#ba414b"
    separator_color = "active"
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = Terminus 12
    line_height = 0

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 75
    icon_path = ~/.config/icons/:~/.config/

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    context = ctrl+shift+period

[urgency_low]
    background = "#23293a"
    foreground = "#fff7d1"
    frame_color = "#7f2d33"
    timeout = 10

[urgency_normal]
    background = "#23293a"
    foreground = "#fff7d1"
    frame_color = "#ba414b"
    timeout = 10

[urgency_critical]
    background = "#23293a"
    foreground = "#fff7d1"
    frame_color = "#ff0000"
    timeout = 0
