#!/bin/sh

# Program startup routine for bspwm session

# Start some important programs....
pregp -x picom || picom &
pgrep -x sxhkd || sxhkd &

# Enable background pia vpn control
piactl background enable

# Restore wpg wallpaper and scheme
sh $HOME/.config/wpg/wp_init.sh

# Start dunst is not exist
pgrep -x dunst || dunst &

# Start redshift if not exist
pgrep -x redshift || redshift &

# Start polybar if not exist
if pgrep -x polybar
then	
	echo "Bars running"
else
	polybar top -c ~/.config/polybar/config &
	polybar two -c ~/.config/polybar/config &
fi

